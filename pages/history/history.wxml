<!-- history.wxml 历史记录页 -->
<view class="container">
  <block wx:for="{{records}}" wx:key="index">
    <view class="record-card">
      <view class="header">
        <text>{{item.date}}</text>
        <button size="mini" bindtap="deleteRecord" data-index="{{index}}">删除</button>
      </view>
      
      <view class="content">
        <text>血压：{{item.systolic}}/{{item.diastolic}} mmHg</text>
        <text>心率：{{item.heartRate}}</text>
      </view>
      
      <view class="note" wx:if="{{item.note !== '无'}}">备注：{{item.note}}</view>
    </view>
  </block>
</view>